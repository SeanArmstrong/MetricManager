<% if @projects.empty? %>
  <h3>Click the link below to get started</h3>
<% else %>
  <h3>Projects</h3>

  <br>

  <table class="table table-striped table-hover" id="entrytable">
    <thead>
      <tr>
        <th>Name</th>
        <th>GUID</th>
        <th>Updated At</th>
        <th>Created At</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr data-link="<%= project_path(project) %>">
          <td><%= project.name %></td>
          <td><%= project.guid %></td>
          <td><%= project.updated_at %></td>
          <td><%= project.created_at %></td>
          <td><%= link_to 'Edit', (project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% end %>
<%= link_to 'New Project', new_project_path %>

